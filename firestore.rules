rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only access their own document
    match /users/{userId} {
      // Allow read if user is authenticated and accessing their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow create if user is authenticated and creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update if user is authenticated and updating their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Don't allow delete (users shouldn't delete their own accounts this way)
      allow delete: if false;
      
      // Brands subcollection - users can manage their own brands
      match /brands/{brandId} {
        // Allow read if user is authenticated and accessing their own brands
        allow read: if request.auth != null && request.auth.uid == userId;
        
        // Allow create if user is authenticated and creating their own brand
        allow create: if request.auth != null && request.auth.uid == userId;
        
        // Allow update if user is authenticated and updating their own brand
        allow update: if request.auth != null && request.auth.uid == userId;
        
        // Allow delete if user is authenticated and deleting their own brand
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

